<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        <bean id="q" class="com.questionanswer.Question">  
<property name="questionid" value="1"></property>  
<property name="question" value="What is Java?"></property>  
<property name="answers">  
<map>  
<entry key="Java is a programming language"  value="vidya"></entry>  
<entry key="Java is a Platform" value="rashmi"></entry>  
</map>  
</property>  
</bean>  
  
</beans>  
        
        
        
        
